{
  "id": null,
  "title": "Go Platform Metrics",
  "tags": ["go-platform", "metrics", "prometheus"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Request Rate",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "sum(rate(http_requests_total{job=\"go-platform\"}[5m])) by (method, status_code)",
          "legendFormat": "{{method}} {{status_code}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "id": 2,
      "title": "HTTP Response Time",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"go-platform\"}[5m])) by (le))",
          "legendFormat": "95th percentile"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "50th percentile"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },

    {
      "id": 3,
      "title": "Application Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "go_memstats_heap_inuse_bytes{job=\"go-platform\"}",
          "legendFormat": "Heap in use"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "go_memstats_heap_alloc_bytes{job=\"go-platform\"}",
          "legendFormat": "Heap allocated"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    },
    {
      "id": 4,
      "title": "Application Goroutines",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "go_goroutines{job=\"go-platform\"}",
          "legendFormat": "Active goroutines"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "id": 5,
      "title": "Error Rate",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "sum(rate(http_requests_total{job=\"go-platform\", status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"go-platform\"}[5m])) * 100",
          "legendFormat": "5xx Error Rate %"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s",
  "annotations": {
    "list": [
      {
        "name": "Deployments",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "expr": "up{job=\"go-platform\"}",
        "iconColor": "green"
      }
    ]
  }
}
